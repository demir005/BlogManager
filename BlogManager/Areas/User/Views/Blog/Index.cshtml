@model IEnumerable<BlogManager.Models.BlogPost>
@{
    ViewData["Title"] = "Index";
}

<br /> <br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Blog Post List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Blog Post</a>
    </div>
</div>


<br /> 
<div>
    <table class="table table-striped border col-lg-12">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Title)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Content)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Summary)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.DateAndTime)
            </th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Title)
            </td>

            <td>
                @Html.DisplayFor(m => item.Content)
            </td>

            <td>
                @Html.DisplayFor(m => item.Summary)
            </td>

            <td>
                @Html.DisplayFor(m => item.DateAndTime)
            </td>

            <td>
                <partial name="_TableButtonPartial" model="item.Id" />
            </td>
        </tr>
        }
    </table> 
</div>