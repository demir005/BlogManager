@model IEnumerable<BlogManager.Models.BlogPost>
@{
    ViewData["Title"] = "Index";
}

<br /> <br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Blog Post List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp; New Blog Post</a>
    </div>
</div>


<br /> 
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m=>m.Title)
            </th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Title)
            </td>
            <td>
                EDIT | DELETE
            </td>
        </tr>
        }
    </table> 
</div>